<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CyberLoungeV2.Views.MainContent.Profile.ChangePasswordPage"
             BackgroundColor="{StaticResource Key=PageBackgroundColor}"
             NavigationPage.HasNavigationBar="True"
             NavigationPage.HasBackButton="True"
             >
    
    <ContentPage.Content>
        <StackLayout Padding="20" VerticalOptions="Center">
            <Frame BackgroundColor="{StaticResource Key=Primary}" CornerRadius="20">
                <StackLayout>
                    <Label Text="Введите новый пароль:"
                        TextColor="White"
                        VerticalOptions="CenterAndExpand"/>
                    <Entry x:Name="ChangingPasswordEntry" Placeholder="Введите новый пароль" BackgroundColor="{StaticResource Key=Primary}" TextColor="White" PlaceholderColor="White"/>
                </StackLayout>
            </Frame>
            <Button x:Name="ChangePasswordBtn" Text="Изменить" CornerRadius="10" Clicked="ButtonClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>